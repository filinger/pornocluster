<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>/var/lib/hadoop/datanode_data</value>
    </property>
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/var/lib/hadoop/namenode_data</value>
    </property>
    <property>
        <name>dfs.journalnode.edits.dir</name>
        <value>/var/lib/hadoop/journal_data</value>
    </property>

    <property>
        <name>dfs.replication</name>
        <value>3</value>
    </property>

    <!-- HA cluter confg -->
    <property>
        <name>dfs.nameservices</name>
        <value>pornocluster</value>
    </property>
    <property>
        <name>dfs.ha.namenodes.pornocluster</name>
        <value>crash,burn</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.pornocluster.crash</name>
        <value>172.26.5.13:8020</value>
    </property>
    <property>
        <name>dfs.namenode.rpc-address.pornocluster.burn</name>
        <value>172.26.5.36:8020</value>
    </property>
    <property>
        <name>dfs.namenode.http-address.pornocluster.crash</name>
        <value>172.26.5.13:50070</value>
    </property>
    <property>
        <name>dfs.namenode.http-address.pornocluster.burn</name>
        <value>172.26.5.36:50070</value>
    </property>

    <property>
        <name>dfs.namenode.shared.edits.dir</name>
        <value>qjournal://172.26.5.14:8485;172.26.5.37:8485;172.26.5.38:8485/pornocluster</value>
    </property>

    <property>
        <name>dfs.client.failover.proxy.provider.pornocluster</name>
        <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
    </property>

    <!-- Fencing config -->
    <property>
        <name>dfs.ha.fencing.methods</name>
        <value>sshfence</value>
    </property>
    <property>
        <name>dfs.ha.fencing.ssh.private-key-files</name>
        <value>/root/.ssh/id_rsa</value>
    </property>

    <!-- ZooKeeper failover config -->
    <property>
        <name>dfs.ha.automatic-failover.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>ha.zookeeper.quorum</name>
        <value>172.26.5.14:21815,172.26.5.37:2181,172.26.5.38:2181,172.26.5.44:2181,172.26.5.45:2181</value>
    </property>
</configuration>
